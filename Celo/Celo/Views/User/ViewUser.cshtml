@model Celo.Model.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
    <link href='@Url.Content(@"~/Styles/main.css")' rel="stylesheet" type="text/css" />
    <script type="text/javascript">
        DeleteUser = (userId) => {
            let deleteConfirm = confirm('Are you sure you want to delete this user? Action cannot be undone');
            if (deleteConfirm) {
                let xhr = new XMLHttpRequest();
                xhr.open('post', "/api/User/Delete/" + userId);
                xhr.send();
                xhr.onload = () => {
                    if (xhr.status == 200) {
                        window.location.href = "/api/User";
                    }
                }
            }
        }
    </script>
</head>
<body>
    <div class="grid-div">
        <div class="cell">Id</div>
        <div class="cell">@Model.Id</div>

        <div class="cell">Title</div>
        <div class="cell">@Model.Title</div>

        <div class="cell">First Name</div>
        <div class="cell">@Model.FirstName</div>

        <div class="cell">Last Name</div>
        <div class="cell">@Model.LastName</div>

        <div class="cell">Email</div>
        <div class="cell">@Model.Email</div>

        <div class="cell">Date of Birth</div>
        <div class="cell">@Model.Birthday</div>

        <div class="cell">Phone</div>
        <div class="cell">@Model.PhoneNumber</div>

        <div class="cell">Gender</div>
        <div class="cell">@Model.Gender</div>
    </div>
    <div class="profilePic">
        <img src="@Model.ProfilePicturePath" />
    </div>
    <button>
        @Html.ActionLink("Edit", "Update", new { id = Model.Id })
    </button>
    <button onclick="DeleteUser(@Model.Id)">
        Delete User
    </button>
</body>
</html>
